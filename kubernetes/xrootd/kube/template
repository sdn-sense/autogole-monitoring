apiVersion: apps/v1
kind: Deployment
metadata:
  name: REPLACEME_UNIQ_NAME
  namespace: opennsa
  labels:
    k8s-app: REPLACEME_UNIQ_NAME
spec:
  selector:
    matchLabels:
      k8s-app: REPLACEME_UNIQ_NAME
  template:
    metadata:
      labels:
        k8s-app: REPLACEME_UNIQ_NAME
    spec:
      nodeSelector:
        nautilus.io/ipv6: "true"
      containers:
      - env:
        - name: XRD_ENDPOINT
          value: REPLACEME_HOSTNAME_PORT
        - name: X509_USER_PROXY
          value: /etc/xcache-proxy/x509-proxy
        - name: XRD_PROTOCOLS
          value: davs,https
        - name: XRD_MODES
          value: read,write,delete
        - name: XRD_WORKDIR
          value: /srv/
        - name: XRD_PATH
          value: /store/temp/user/sense/kube-xrootd-test
        - name: XRD_UNIQ_NAME
          value: REPLACEME_HOSTNAME
        - name: XRD_UNIQ_WRITE
          value: 'True'
        image: sdnsense/xrootd-mon:latest
        imagePullPolicy: Always
        name: REPLACEME_UNIQ_NAME
        ports:
        - containerPort: 8000
        resources:
          limits:
            cpu: 1
            memory: 1Gi
          requests:
            cpu: 1
            memory: 1Gi
        volumeMounts:
        - mountPath: /etc/xcache-proxy
          name: xcache-proxy
      volumes:
      - name: xcache-proxy
        secret:
          defaultMode: 384
          secretName: xcache-proxy
---
apiVersion: v1
kind: Service
metadata:
  namespace: opennsa
  labels:
    k8s-app: REPLACEME_UNIQ_NAME
  name: REPLACEME_UNIQ_NAME
spec:
  ports:
  - port: 8000
    protocol: TCP
    targetPort: 8000
  selector:
    k8s-app: REPLACEME_UNIQ_NAME
  type: ClusterIP
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace: opennsa
  annotations:
    kubernetes.io/ingress.class: haproxy
  name: REPLACEME_UNIQ_NAME
spec:
  rules:
  - host: REPLACEME_UNIQ_NAME.nrp-nautilus.io
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: REPLACEME_UNIQ_NAME
            port:
              number: 8000
